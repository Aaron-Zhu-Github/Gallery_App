@model List<Image>

<style>
    .row-equal {
        display: flex;
        flex-wrap: wrap;
        margin: -15px; 
    }

    .col-equal {
        flex: 0 0 33.333333%; 
        max-width: 33.333333%; 
        box-sizing: border-box;
        padding: 15px; 
    }

    .equal-size-image-container {
        position: relative;
        width: 100%;
        padding-bottom: 100%; 
        overflow: hidden;
    }

    .img-fluid {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover; 
    }
</style>

@*Equal-size view & detail view*@
<div class="container">
    <div class="row row-equal">
        @foreach (var image in Model)
        {
            <div class="col-md-4 col-equal">
                @*~/Gallery/DetailView?id=@image.Id*@
                <a href="@image.Url" data-fancybox="gallery" data-caption="Image @image.Id">
                    <div class="equal-size-image-container">
                        <img src="~/@image.Url" alt="Image" class="img-fluid">
                    </div>
                </a>
            </div>
        }
    </div>
</div>
